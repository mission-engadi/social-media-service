# Application
PROJECT_NAME="Social Media Service"
PROJECT_DESCRIPTION="Social media management, post scheduling, and analytics service"
VERSION="0.1.0"
PORT=8007
ENVIRONMENT="development"  # development, staging, production
DEBUG="true"

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
ALGORITHM="HS256"

# CORS - comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:8000,https://engadi.org"

# Database
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/social_media_service_db"
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL="redis://localhost:6379/0"

# Kafka
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
KAFKA_TOPIC_PREFIX="social_media_service"

# External Services
AUTH_SERVICE_URL="http://localhost:8001"

# Buffer API Configuration
BUFFER_API_URL="https://api.bufferapp.com/1"
BUFFER_ACCESS_TOKEN=""  # Optional: Set global Buffer token or configure per user

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json or text

# Monitoring (optional)
DATADOG_API_KEY=""
DATADOG_APP_KEY=""

# Feature Flags
ENABLE_METRICS="true"
ENABLE_TRACING="false"
